{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es5",
        "moduleResolution": "node",
        "module": "esnext",
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "baseUrl": "src"
    },
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es2015", "dom", "dom.iterable"],
    "exclude": ["dist"]
}
